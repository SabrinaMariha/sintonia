<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/material_dynamic_neutral0"
    tools:context=".activities.NovaCartaActivity">

    <!-- Botões superiores -->
    <ImageButton
        android:id="@+id/btn_config"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="16dp"
        android:background="@android:color/transparent"
        android:src="@drawable/gear_1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/btn_voltar_nvCarta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:background="@android:color/transparent"
        android:src="@drawable/down_left_1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Nome do contato -->
    <TextView
        android:id="@+id/lbl_nome_contato"
        style="@style/Quicksand.Bold"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="42dp"
        android:text="Nome"
        android:textColor="@color/white"
        android:textSize="34sp"
        app:layout_constraintTop_toBottomOf="@id/btn_config"
        app:layout_constraintStart_toStartOf="@+id/btn_voltar_nvCarta"
        app:layout_constraintEnd_toEndOf="@+id/btn_config" />

    <!-- Container principal -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/Container_Nova_Carta"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="16dp"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/lbl_nome_contato"
        app:layout_constraintStart_toStartOf="@id/lbl_nome_contato"
        app:layout_constraintEnd_toEndOf="@id/lbl_nome_contato"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- Cabeçalho Nova Carta -->
        <TextView
            android:id="@+id/lbl_matches"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nova Carta"
            android:textColor="#FAF9F9"
            android:textSize="26sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Carta com proporção responsiva -->

        <!-- Botão de salvar -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/carta"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/bg_btn_branco"
            android:paddingStart="24dp"
            android:paddingTop="40dp"
            android:paddingEnd="24dp"
            android:paddingBottom="24dp"
            app:layout_constraintBottom_toTopOf="@+id/salvar_nova_carta"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lbl_matches"
            app:layout_constraintVertical_bias="1.0">


            <ImageButton
                android:id="@+id/trash"
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:background="@drawable/trashcan"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/edit_descricao_nova_carta"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="1dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="1dp"
                android:layout_marginBottom="2dp"
                android:background="@drawable/bg_descricao_nova_carta"
                android:hint="Descreva a carta aqui..."
                android:inputType="textMultiLine|textCapSentences"
                android:maxLength="300"
                android:padding="15dp"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textColorHint="#FF222222"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/trash"
                app:layout_constraintVertical_bias="1.0" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- salvar_nova_carta -->
        <Button
            android:id="@+id/salvar_nova_carta"
            style="@style/CustomMaterialButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:background="@drawable/bg_btn"
            android:text="Salvar"
            android:textColor="@color/white"
            app:backgroundTint="@null"
            app:cornerRadius="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
