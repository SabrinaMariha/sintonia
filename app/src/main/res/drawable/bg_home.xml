<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">



    <!-- Gradiente vertical -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="90"
                android:startColor="@color/rosaEletrico"
                android:centerColor="@color/black"
                android:endColor="@color/cinza"
                android:type="linear" />
            <corners android:radius="20dp" />
        </shape>
    </item>
    <!-- Fundo preto com transparÃªncia e cantos arredondados -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#99000000" /> <!-- preto com 7% alpha -->
            <corners android:radius="20dp" />
        </shape>
    </item>
</layer-list>
